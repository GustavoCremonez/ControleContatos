@model ContatoModel

@{
    ViewData["Title"] = "Confirmação para apagar";
}

<div class="text-center">
    <h3 class="display-4">Realmente deseja apagar o contato (@Model.Name)?</h3>
</div>

<a class="btn btn-primary btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Apagar</a>
<a class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Cancelar</a>