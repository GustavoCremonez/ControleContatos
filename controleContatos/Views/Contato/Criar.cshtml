@model ContatoModel

@{
    ViewData["Title"] = "Criar novo contato";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar novo contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label form="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato" />
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="form-group">
        <label form="email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>
    <div class="form-group">
        <label form="telefone">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o Celular do contato" />
        @Html.ValidationMessageFor(x => x.Celular)
    </div>

    <button type="submit" class="btn btn-primary btn-block">Enviar</button>
    <button class="btn btn-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</button>
</form>